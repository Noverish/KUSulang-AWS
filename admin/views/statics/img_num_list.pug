doctype html
html
  include ../head.pug
  body
    - var is_statics = 'active';
    include ../nav.pug
    include ./list_tab.pug
    
    each val, index in results
      h4(class='text-center')=index
      div(class='container')
        table(class='table table-responsive table-hover')
          tr
            th ID
            th Group
            th Enable
            th StoreName
            th Image
            th Count
          each item in val
            tr
              td(class='col-md-1')=item._id
              td(class='col-md-1')=index
              td(class='col-md-1')=item.enable
              td(class='col-md-3')=item.name
              td(class='col-md-4')
                img(src=item.img alt=item.img class='col-md-4 img-responsive')
              td(class='col-md-3')=item.count
