doctype html
html
  include ./head.pug
  body
    - var is_home = 'active';
    include ./index_nav.pug
    if status == 'admin'
      p Welcome to Socrates!
    else
      if status == 'failed'
        p Login Fail
      form(class='text-center form-horizontal' action='./' method='post')
        div(class='form-group')
          label(for='loginId') ID
          input(type='text' name='id' class='form-control' id='loginId' placeholder='ID')
        div(class='form-group')
          label(for='loginPassword') PASSWORD
          input(type='password' name='password' class='form-control' id='loginPassword' placeholder='Password')
        button(type='submit' class='btn btn-default') LOGIN
          
