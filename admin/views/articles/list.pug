doctype html
html
  include ../head.pug
  body
    - var is_articles = 'active';
    include ../nav.pug  
    div(class='panel panel-default')
        div(class='panel-heading')
          h1 Articles List
          div(class='text-right') 
            button(class='btn btn-default' onclick='window.scrollTo(0,document.body.scrollHeight)') 맨아래
            a(class='btn btn-default' href='./write/' role='write') 등록
        table(class='table')
          tr
            th ID
            th TITLE
            th WRITER_NAME
            th MODIFY
            th DELETE
          each result in results
            tr
              td
                a(href='./'+result._id+'/')= result._id
              td
                a(href='./'+result._id+'/')= result.title
              td= result.name
              td 
                a(class='btn btn-default' href='./'+result._id+'/modify/' role='modify') 수정
              td
                a(class='btn btn-default' href='./'+result._id+'/delete/' role='delete') 삭제
